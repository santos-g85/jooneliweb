@model IEnumerable<NewsModel> ;

<!-- News & Updates Section -->
<div class="container py-5">
    <h2 class="text-center fw-bold mb-5" style="background: linear-gradient(to right, #f44336, #4caf50); -webkit-background-clip: text; color: transparent;">
        News & Updates
    </h2>

    <div class="row">

        @{
            var featured = Model.FirstOrDefault(x => x.IsFeatured);
            var archive = Model.Where(x => !x.IsFeatured).ToList();
        }
        <!-- Featured Section -->
        <div class="col-md-7">
        <h4 class="fw-bold mb-3">Featured</h4>

        @if(featured!=null){
            
                <div class="card border-0 shadow-sm">
                    <img src="~/images/banner-image-DQggPpNB.jpg" class="card-img-top rounded" alt="Featured News">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">
                            Launching of new product from jooneli inc
                        </h5>
                    </div>
                </div>
            
        }
        else
        {
            <h1>No Featured News!</h1>
        }
        </div>

        <!-- Archive Section -->
      
        <div class="col-md-5">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="fw-bold">Archive</h4>
                <a asp-controller="News" asp-action="Create" class="text-danger fw-semibold">View All</a>
            </div>

            @if (archive != null)
            {
                <div class="d-flex mb-4">
                    <img src="/images/banner-image-DQggPpNB.jpg" class="me-3 rounded" style="width: 80px; height: 60px; object-fit: cover;" alt="News 1">
                    <div>
                        <span class="text-uppercase text-muted small">Product</span>
                        <h6 class="mb-1 fw-semibold">Simplifying Financial Access in Nepal with Account Aggregators and Blockchain</h6>
                        <small class="text-muted">May 28, 2025</small>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
