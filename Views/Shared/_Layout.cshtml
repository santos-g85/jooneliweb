    <meta property="og:image:alt" content="Jooneli Inc" />

    <!-- Twitter Meta -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Jooneli Inc" />
    <meta name="twitter:description" content="Jooneli Inc" />
    <meta name="twitter:image" content="http://jooneli.com/images/" />

    <!-- Bootstrap CSS (only one) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <script src="~/js/site.js" asp-append-version="true"></script>

    <style>
        /* Minimal custom CSS */
        .mega-dropdown {
            position: absolute;
            top: 100%;
            left: 0;
            width: 100%;
            background:white;
            padding: 2rem 1rem;
            display: none;
            z-index: 1050;
            transition: 1s ease;
        }

        .nav-item.position-static:hover .mega-dropdown,
        .mega-dropdown:hover {
                display: block;
               
        }

        /* Add this to your existing style block */
        .navbar-nav:hover ~ .custom-nav,
        .navbar-nav:hover + .custom-nav,
        .custom-nav:hover {
            background-color: white !important;
            transition: background-color 0.3s ease;
        }

        /* Optional: Add transition for smooth color change */
        .custom-nav {
            transition: background-color 0.3s ease;
        }

        .custom-nav:hover .nav-link {
                color: black !important;
         }

         .custom-nav:hover .touch-custom {
                color: black !important;
         }
        .custom-nav:hover .nav-link:hover {
                color: red !important;
        }
    </style>
</head>
<body>

    @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index")
    {
        <header class="custom-header mx-auto">
            <video autoplay muted loop playsinline class="bg-video">
                <source src="~/videos/hero-video-finalist.mp4" type="video/mp4" />
