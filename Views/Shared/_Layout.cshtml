                <div class="col-6 col-md-2 mb-4">
                    <h6 class="fw-bold">News & Updates</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-dark text-decoration-none">Corporate News</a></li>
                        <li><a href="#" class="text-dark text-decoration-none">Videos</a></li>
                    </ul>
                </div>

                <!-- Certifications -->
                <div class="col-6 col-md-2 mb-4">
                    <h6 class="fw-bold">Certifications</h6>
                    <img src="~/images/joonlogo--JfLTwqW.png" alt="Certifications" class="img-fluid mt-2" style="max-width: 50px;">
                    <img src="~/images/joonlogo--JfLTwqW.png" alt="Certifications" class="img-fluid mt-2" style="max-width: 50px;">
                </div>
            </div>

            <hr>

            <!-- Bottom Bar -->
            <div class="d-flex justify-content-between align-items-center flex-wrap py-3">
                <p class="mb-0">&copy; 2025 <span class="text-danger fw-bold">Jooneli Group</span>.</p>
                <div>
                    <a href="#" class="text-dark me-3"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="text-dark me-3"><i class="bi bi-linkedin"></i></a>
                    <a href="#" class="text-dark"><i class="bi bi-youtube"></i></a>
                </div>
            </div>
        </div>
    </footer>




    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
