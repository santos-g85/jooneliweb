<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]Jooneli Inc</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/jooneliweb.styles.css" asp-append-version="true" />

    <!-- SEO Meta Tags -->
    <meta name="keywords" content="Jooneli Inc" />
    <meta name="robots" content="index, follow" />
    <meta name="title" content="Jooneli Inc" />
    <meta name="description" content="360cbs trading system." />

    <!-- Open Graph Meta -->
    <meta property="og:title" content="Jooneli Inc" />
    <meta property="og:description" content="Jooneli Inc" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="http://jooneli.com/" />
    <meta property="og:image" content="http://jooneli.com/" />
    <meta property="og:image:alt" content="Jooneli Inc" />

    <!-- Twitter Meta -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Jooneli Inc" />
    <meta name="twitter:description" content="Jooneli Inc" />
    <meta name="twitter:image" content="http://jooneli.com/images/" />

    <!-- Bootstrap CSS (only one) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>

    @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index")
    {
        <section class="vido-header">
            <video autoplay muted loop playsinline class="bg-video">
                <source src="~/videos/hero-video-finalist.mp4" type="video/mp4" />
                Your browser does not support the video tag.
            </video>
            <header class="navbar navbar-expand-sm custom-header">
                <div class="logo">
                    <a class="navbar-brand " asp-controller="Home" asp-action="Index">
                        <img src="~/images/joonlogo--JfLTwqW.png" alt="Logo" style="height:75px;">
                    </a>
                </div>
                <div class="hamburger-menu">
                    <button class="navbar-toggler d-sm-none bg-danger" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasScrolling" aria-controls="offcanvasScrolling">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
                @* navbar *@
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center flex-grow-1 ">
                    <ul class="list-unstyled navbar-nav gap-4">
                        <li class="my-list"><a asp-controller="Home" asp-action="About" class="nav-link fw-light fs-6">ABOUT US</a></li>
                        <li class="nav-item my-list position-static">
                            <a asp-controller="Home" asp-action="Business" class="nav-link fw-light fs-6 ">BUSINESS VERTICALS</a>
                            <div class="mega-dropdown shadow">
                                <div class="container">
                                    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-4">
                                        <div class="col d-flex align-items-start gap-2">
                                            <img src="~/images/joonlogo--JfLTwqW.png" alt="" width="32" height="32">
                                            <div>
                                                <a href="#">
                                                    <strong>360CBS</strong>
                                                </a><br><small>Jooneli</small>
                                            </div>
                                        </div>
                                        <div class="col d-flex align-items-start gap-2">
                                            <img src="~/images/joonlogo--JfLTwqW.png" alt="" width="32" height="32">
                                            <div>
                                                <a href="#">
                                                    <strong>Trading</strong>
                                                </a><br><small>Jooneli</small>
                                            </div>
                                        </div>
                                        <div class="col d-flex align-items-start gap-2">
                                            <img src="~/images/joonlogo--JfLTwqW.png" alt="" width="32" height="32">
                                            <div>
                                                <a href="#">
                                                    <strong>MultipleDesk</strong>
                                                </a>
                                                <br><small>MultipleDesk</small>
                                            </div>
                                        </div>
                                        <!-- Add more as needed -->
                                    </div>
                                </div>
                            </div>

                        </li>
                        <li class="my-list"><a asp-controller="Home" asp-action="About" class="nav-link fw-light fs-6">SOLUTIONS</a></li>

                        <li class="my-list"><a asp-controller="Home" asp-action="Career" class="nav-link fw-light fs-6">CAREER</a></li>
                    </ul>
                </div>

                <div class="ms-auto d-none d-sm-block" style="margin-right:120px;">
                    <a class="btn btn-md btn-outline-light touch-custom" asp-controller="Home" asp-action="Contact">Get in Touch</a>
                </div>

            </header>

            @await Html.PartialAsync("Partials/_HomeHeroContent")

        </section>

    }
    else
    {
        <section>
            <header class="navbar navbar-expand-sm custom-header">
                <div class="logo">
                    <a class="navbar-brand " asp-controller="Home" asp-action="Index">
                        <img src="~/images/joonlogo--JfLTwqW.png" alt="Logo" style="height:75px;">
                    </a>
                </div>
                <div class="hamburger-menu">
                    <button class="navbar-toggler d-sm-none bg-danger" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasScrolling" aria-controls="offcanvasScrolling">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
                @* navbar *@
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center flex-grow-1 ">
                    <ul class="list-unstyled navbar-nav gap-4">
                        <li class="my-list"><a asp-controller="Home" asp-action="About" class="nav-link fw-light fs-6 text-black">ABOUT US</a></li>
                        <li class="nav-item my-list position-static">
                            <a asp-controller="Home" asp-action="Business"  class="nav-link fw-light  text-black fs-6 ">BUSINESS VERTICALS</a>
                            <div class="mega-dropdown shadow">
                                <div class="container">
                                    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-4">
                                        <div class="col d-flex align-items-start gap-2">
                                            <img src="~/images/joonlogo--JfLTwqW.png" alt="" width="32" height="32">
                                            <div>
                                                <a href="#">
                                                    <strong>360CBS</strong>
                                                </a><br><small>Jooneli</small>
                                            </div>
                                        </div>
                                        <div class="col d-flex align-items-start gap-2">
                                            <img src="~/images/joonlogo--JfLTwqW.png" alt="" width="32" height="32">
                                            <div>
                                                <a href="#">
                                                    <strong>Trading</strong>
                                                </a><br><small>Jooneli</small>
                                            </div>
                                        </div>
                                        <div class="col d-flex align-items-start gap-2">
                                            <img src="~/images/joonlogo--JfLTwqW.png" alt="" width="32" height="32">
                                            <div>
                                                <a href="#">
                                                    <strong>MultipleDesk</strong>
                                                </a>
                                                <br><small>MultipleDesk</small>
                                            </div>
                                        </div>
                                        <!-- Add more as needed -->
                                    </div>
                                </div>
                            </div>

                        </li>
                        <li class="my-list"><a asp-controller="Home" asp-action="About" class="nav-link fw-light fs-6  text-black">SOLUTIONS</a></li>
                        <li class="my-list"><a asp-controller="Home" asp-action="Career" class="nav-link fw-light fs-6 text-black">CAREER</a></li>
                    </ul>
                </div>

                <div class="ms-auto d-none d-sm-block" style="margin-right:120px;">
                    <a class="btn btn-md btn-outline-danger touch-custom" asp-controller="Home" asp-action="Contact">Get in Touch</a>
                </div>

            </header>
        </section>
    }

    <div class="offcanvas offcanvas-start " style="width:75%;" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-1" id="offcanvasScrolling" aria-labelledby="offcanvasScrollingLabel">
        <div class="offcanvas-header">
            <a asp-controller="Home" asp-action="Index">
                <img src="images/joonlogo--JfLTwqW.png" style="height:75px;width:85px" alt="Jooneli" />
            </a>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="navbar-nav">
                
                <li class="nav-item">
                    <a class="nav-link text-dark fs-5" asp-controller="Home" asp-action="About">ABOUT US</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark fs-5" asp-controller="Home" asp-action="Business">BUSINESS VERTICAL</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark fs-5" asp-controller="Home" asp-action="Business">SOLUTIONS</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark fs-5" asp-controller="Home" asp-action="Career">CAREER</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark fs-5" asp-controller="Home" asp-action="Contact">GET IN TOUCH</a>
                </li>
            </ul>
        </div>
    </div>


    <div class="container ">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    @await Html.PartialAsync("Partials/_Footer")

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
